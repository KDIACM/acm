#tooltip {
	position: absolute;
	z-index: 3000;
	background:#EAF9FF;
	border:1px solid #006699;
	padding: 5px 8px;
	opacity: 0.85;
	font-weight:bold;
	color:#000;
}
#tooltip h3, #tooltip div { margin: 0; }

#tooltip.fancy {
	background: url(../images/shadow2.png);
	padding-top: 5em;
	height: 100px;
}